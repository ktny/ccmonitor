{
  "model": "opus",
  "theme": "dark",
  "cleanupPeriodDays": 30,
  "apiKeyHelper": null,
  "preferredNotifChannel": "terminal_bell",
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "DISABLE_COST_WARNINGS": "0",
    "BASH_DEFAULT_TIMEOUT_MS": "300000",
    "BASH_MAX_TIMEOUT_MS": "1200000",
    "MAX_THINKING_TOKENS": "200000",
    "SHELL": "/usr/bin/zsh",
    "GOPATH": "~/go",
    "CARGO_HOME": "~/.cargo",
    "RUSTUP_HOME": "~/.rustup"
  },
  "permissions": {
    "allow": [
      "Bash(go:*)",
      "Bash(gofmt:*)",
      "Bash(golint:*)",
      "Bash(golangci-lint:*)",
      "Bash(make:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(ls:*)",
      "Bash(eza:*)",
      "Bash(exa:*)",
      "Bash(cat:*)",
      "Bash(bat:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(find:*)",
      "Bash(fd:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(echo:*)",
      "Bash(which:*)",
      "Bash(pwd)",
      "Bash(cd:*)",
      "Bash(tree:*)",
      "Bash(jq:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(sort:*)",
      "Bash(awk:*)",
      "Bash(sed:*)",
      "Bash(date:*)",
      "Bash(whoami)",
      "Bash(env)",
      "Bash(export:*)",
      "Bash(history)",
      "Bash(alias:*)",
      "Read(**)",
      "Edit(./**)",
      "Edit(!.git/**)",
      "Edit(!target/**)",
      "Edit(!dist/**)",
      "Edit(!build/**)",
      "Edit(!bin/**)",
      "Edit(!coverage/**)",
      "Edit(~/.gitconfig)",
      "Edit(~/.gitignore_global)",
      "Grep(**)",
      "Glob(**)",
      "LS(**)",
      "WebFetch(domain:*)",
      "WebSearch(*)",
      "Write(./**)",
      "Write(!.git/**)",
      "Write(!target/**)",
      "Write(!dist/**)",
      "Write(!build/**)",
      "Write(!bin/**)",
      "Write(!coverage/**)",
      "MultiEdit(./**)",
      "MultiEdit(!.git/**)",
      "MultiEdit(!target/**)",
      "MultiEdit(!dist/**)",
      "MultiEdit(!build/**)",
      "MultiEdit(!bin/**)",
      "MultiEdit(!coverage/**)",
      "TodoRead(**)",
      "TodoWrite(**)",
      "Task(**)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf /*)",
      "Bash(sudo rm:*)",
      "Bash(sudo:*)",
      "Bash(dd:*)",
      "Bash(> /dev/*)",
      "Bash(>> /dev/*)",
      "Bash(chmod 777 /*)",
      "Bash(chown root:*)",
      "Bash(curl * | sh)",
      "Bash(curl * | bash)",
      "Bash(wget * | sh)",
      "Bash(wget * | bash)",
      "Bash(rm -rf .git)",
      "Bash(git push --force-with-lease origin main)",
      "Bash(git push -f origin main)",
      "Edit(/etc/**)",
      "Edit(/usr/**)",
      "Edit(/var/**)",
      "Edit(/opt/**)",
      "Edit(/bin/**)",
      "Edit(/sbin/**)",
      "Edit(/lib/**)",
      "Edit(~/.ssh/id_*)",
      "Edit(~/.ssh/*_rsa)",
      "Edit(~/.ssh/*_ecdsa)",
      "Edit(~/.ssh/*_ed25519)",
      "Edit(/etc/passwd)",
      "Edit(/etc/shadow)",
      "Edit(/etc/sudoers)",
      "Write(/etc/**)",
      "Write(/usr/**)",
      "Write(/var/**)",
      "Write(/opt/**)",
      "Write(/bin/**)",
      "Write(/sbin/**)",
      "Write(/lib/**)",
      "Write(~/.ssh/id_*)",
      "Write(~/.ssh/*_rsa)",
      "Write(~/.ssh/*_ecdsa)",
      "Write(~/.ssh/*_ed25519)",
      "Write(/etc/passwd)",
      "Write(/etc/shadow)",
      "Write(/etc/sudoers)"
    ]
  }
}