{
  "name": "ccstat",
  "version": "1.0.0",
  "description": "CLI tool that analyzes Claude Code session history and visualizes project activity patterns",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ccstat": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/cli/index.ts",
    "dev:days": "tsx src/cli/index.ts --days 2",
    "dev:hours": "tsx src/cli/index.ts --hours 6",
    "build": "tsc --outDir dist --target ES2022 --module ESNext --moduleResolution Bundler --allowSyntheticDefaultImports --esModuleInterop && cp dist/cli/index.js dist/index.js",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "claude",
    "cli",
    "analytics",
    "visualization"
  ],
  "author": "ktny",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "date-fns": "^3.3.1",
    "simple-git": "^3.0.0",
    "ink": "^4.4.1",
    "react": "^18.2.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18"
  }
}
